<UserControl x:Class="menuApp.MVVW.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:menuApp.MVVW.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Daily todo List"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal">
            <Border Width="700" 
                    Height="50"
                    CornerRadius="30"
                    Background="Aqua"
                    >

                <Rectangle Width="25"
                               Height="25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="25,0,0,0"
                           Fill="White"
                           />


            </Border>
            
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Margin="0,20,0,0">
            <Border Width="700" 
            Height="50"
            CornerRadius="30"
            Background="Bisque"
            >

                <Rectangle Width="25"
                       Height="25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="25,0,0,0"
                   Fill="White"
                   />


            </Border>

        </StackPanel>


        <StackPanel Orientation="Horizontal" 
            Margin="0,20,0,0">
            <Border Width="700" 
    Height="50"
    CornerRadius="30"
    Background="DarkCyan"
    >

                <Rectangle Width="25"
               Height="25"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="25,0,0,0"
           Fill="White"
           />


            </Border>

        </StackPanel>
    </StackPanel>
</UserControl>
